%ul.event_list
  - @events.each do |e|
    %li.event
      %span.date= e.starts_at.strftime("%B %d, %Y")
      .event_name= link_to e.name
      .event_details
        %p
          %span Where:
          = e.location
        %p
          %span Begins:
          = e.starts_at.strftime("%A %b %d, %Y %I:%M%p")
        %p
          %span Ends:
          = e.ends_at.strftime("%A %b %d, %Y %I:%M%p")
        %p.event_description= e.description